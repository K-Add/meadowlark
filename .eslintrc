{
    "env": {
      "node": true,
      "browser": true,
      "es6": true
    },
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "globals": {
      "exampleGlobalVariable": true
    },
    "rules": {
      "no-console": 0,
      "space-infix-ops": "error",
      "quotes": ["error", "single", {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }],
      "space-before-blocks": ["error", "always"],
      "semi": ["error", "never"]
    },
    "plugins": []
  }